<!-- bootstrapのナビゲーションバーをフッターに使用 -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark py-1 fixed-top ">
  <!-- タイトルをクリックしたらルート「/」ページへ移動 -->
  <% if user_signed_in? %>
    <a class="navbar-brand ml-2" href="/"><h1 class="my-0 strong">ログイン中</h1></a>
    <%= link_to '新規投稿', new_article_path ,class: 'btn btn-primary ml-2', data: {"turbolinks" => false} %>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-primary ml-3' %>
  <% else %>
    <a class="navbar-brand ml-2" href="/"><h1 class="my-0">Liber's Blog</h1></a>
  <% end %>


  <!-- レスポンシブデザイン ページが小さくなったら三本線のアイコンを表示 -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- ヘッダーのアイテムを定義 -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto mr-2">
      <!-- application_helper.rbで定義しているheader_link_item関数を使用 -->
      <%= header_link_item('Technology', '/articles?utf8=✓&tag_id=1') %>
      <%= header_link_item('Business', '/articles?utf8=✓&tag_id=2') %>
      <%= header_link_item('Lifehack', '/articles?utf8=✓&tag_id=3') %>
      <%= header_link_item('Diary', '/articles?utf8=✓&tag_id=4') %>
      <%= header_link_item('Home', root_path) %>
    </ul>

    <!-- form-inlineで横並び表示 -->
      <%= form_with url: articles_path, method: :get, local: true do |f| %>
        <%= f.text_field :search, class:'form-control form-control-md col-lg-12 col-6 mr-sm-2', type:'search', placeholder:'Search', size:'15' %>
      <% end %>
  </div>
</nav>


