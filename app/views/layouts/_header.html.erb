<!-- bootstrapのナビゲーションバーをフッターに使用 -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark py-1 fixed-top ">
  <!-- タイトルをクリックしたらルート「/」ページへ移動 -->
  <a class="navbar-brand ml-2" href="/"><h2 class="my-0">Liber's Blog</h2></a>

  <!-- レスポンシブデザイン ページが小さくなったら三本線のアイコンを表示 -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- ヘッダーのアイテムを定義 -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <!-- application_helper.rbで定義しているheader_link_item関数を使用 -->
      <%= header_link_item('Technology', '#') %>
      <%= header_link_item('Business', '#') %>
      <%= header_link_item('Lifehack', '#') %>
      <%= header_link_item('Diary', '#') %>
      <%= header_link_item('Home', root_path) %>
    </ul>
    <!-- form-inlineで横並び表示 -->
    <form class="form-inline">
      <input class="form-control form-control-sm mr-sm-2 col-7" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>

</nav>
