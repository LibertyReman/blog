                  <i class="fa fa-camera"></i>
                <% end %>
                <!-- heightでカードの高さを指定 -->
                <div class="card-body" style="height: 50px;">
                  <!-- タイトルの行数は２行以上表示しない-->
                  <h5 class="card-title font-weight-bold" style="overflow: hidden; height: 2.5em;"><%= popular_article.title %></h5>
                </div>
