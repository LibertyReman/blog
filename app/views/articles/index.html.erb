<div class="mx-auto col-11">
  <!-- bootstrapの設定：テキスト位置センター、黒色の下線、グリッド2 mdレスポンシブ、上下マージン4-->
  <h1 class="text-center border-bottom border-dark col-md-8 mx-auto my-4">LATEST ARTICLES</h1>

  <div class="album py-4 bg-light mx-3">
    <div class="container-fluid">
      <div class="row">
        <% @latest_articles.each do |latest_article| %>
          <div class="col-lg-3 col-6 px-2 mb-4 relative">
            <%= link_to latest_article, class:'text-dark', style:'text-decoration: none;' do %>
              <div class="card mb-4 h-100">
                <% if latest_article.image_id.present? %>
                  <!-- 画像サイズを揃える -->
                  <%= image_tag attachment_url(latest_article, :image), class: 'img-fluid rounded border-bottom', style:'width: 400px; height: 230px' %>
                <% else %>
                  <%= image_tag 'bg-gray.jpg', class: 'img-fluid rounded', style:'width: 400px; height: 230px' %>
                  <i class="fa fa-camera"></i>
                <% end %>
                <!-- heightでカードの高さを指定 -->
                <div class="card-body" style="height: 50px;">
                  <!-- タイトルの行数は２行以上表示しない-->
                  <h5 class="card-title font-weight-bold" style="overflow: hidden; height: 2.5em;"><%= latest_article.title %></h5>
                </div>
                <div class="card-footer bg-transparent border-0">
                  <div class="d-flex align-items-center">
                    <small class="text-muted mr-auto"><%= latest_article.updated_at.strftime("%Y.%m.%d") %></small>
                    <span class="badge badge-info ml-auto py-1 px-2">Diary</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- kaminariによるページネーションを表示 -->
    <%= paginate @latest_articles %>
  </div>


  <h1 class="text-center border-bottom border-dark col-md-8 mx-auto my-4">POPULAR ARTICLES</h1>

  <!-- 記事を表示 -->
  <div class="album py-4 bg-light mx-3">
