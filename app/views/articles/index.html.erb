                  <div class="d-flex align-items-center">
                    <small class="text-muted mr-auto"><%= popular_article.updated_at.strftime("%Y.%m.%d") %></small>
                    <span class="badge badge-info ml-auto py-1 px-2">Diary</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

