<div class="mx-auto col-11">
  <!-- bootstrapの設定：テキスト位置センター、黒色の下線、グリッド2 mdレスポンシブ、上下マージン4-->
  <h1 class="text-center border-bottom border-dark col-md-8 mx-auto my-4">LATEST ARTICLES</h1>

  <!-- 記事を表示 -->
  <div class="album py-4 bg-light mx-3">
    <div class="container-fluid">
      <div class="row">
        <% @latest_articles.each do |latest_article| %>
          <%= link_to latest_article, style: 'text-decoration: none;' do %>
            <!-- lgより大きい場合はグリッド3、lgより小さくmdより大きい場合はグリッド6, それ以下はグリッド12-->
            <div class="col-lg-3 col-6 px-2">
              <div class="card mb-4 shadow-smr relative">
                <%= image_tag 'bg-gray.jpg', class: 'img-fluid rounded' %>
                <i class="fa fa-camera"></i>
                <div class="card-body pb-2">
                  <h5 class="card-text text-dark font-weight-bold"><%= latest_article.title %></h5>
                  <!-- d-flex:子要素をフレックスアイテム化、align-items-center:縦方向真ん中にアイテム配置 -->
                  <div class="d-flex align-items-center">
                    <!-- text-muted:テキストの色設定、mr-auto:要素の右にスペース最大作成-->
                    <small class="text-muted mr-auto"><%= latest_article.updated_at.strftime("%Y.%m.%d") %></small>
                    <a href="#" class="badge badge-info ml-auto py-1 px-2">Diary</a>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>


  <h1 class="text-center border-bottom border-dark col-md-8 mx-auto my-4">POPULAR ARTICLES</h1>

  <!-- 記事を表示 -->
  <div class="album py-4 bg-light mx-3">
    <div class="container-fluid">
      <div class="row">
        <% @popular_item_num.each do |i| %>
          <!-- lgより大きい場合はグリッド3、lgより小さくmdより大きい場合はグリッド6, それ以下はグリッド12-->
          <div class="col-lg-3 col-6 px-2">
            <div class="card mb-4 shadow-sm">
              <img class="img-fluid rounded" src="https://picsum.photos/400/280" alt="test img">
              <div class="card-body pb-2">
                <p class="card-text">This is a wider card with supporting text below as a natural
                lead-in to additional content. This content is a little bit longer.</p>
                <!-- d-flex:子要素をフレックスアイテム化、align-items-center:縦方向真ん中にアイテム配置 -->
                <div class="d-flex align-items-center">
                  <!-- text-muted:テキストの色設定、mr-auto:要素の右にスペース最大作成-->
                  <small class="text-muted mr-auto">2013/09/04 12:17</small>
                  <a href="#" class="badge badge-info py-1 px-2">Diary</a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



